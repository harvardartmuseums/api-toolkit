<h1>Resources Labels</h1>

<p>
  These are the secondary Resources available via the Harvard Art Museums' API. This list represents the distinct vocabularies used to describe, label, and categorize objeccts in the collections. Click on a label to browse the available values.
</p>

<div class="tablelinks">
  <a href="/resources/label/century">Century</a><br>
  <a href="/resources/label/classification">Classification</a><br>
  <a href="/resources/label/culture">Culture</a><br>
  <a href="/resources/label/medium">Medium</a><br>
  <a href="/resources/label/period">Period</a><br>
  <a href="/resources/label/place">Place</a><br>
  <a href="/resources/label/support">Support</a><br>
  <a href="/resources/label/technique">Technique</a><br>
  <a href="/resources/label/worktype">Worktype</a><br>
</div>

<hr>

<h3>{{title}}</h3>
<i>{{description}}</i>

<div class="filter-wrap">
  <input id="filter-value" class="inputfield" type="text" placeholder="Filter name">
</div>

<table id="endpoint-table">
  <thead>
  <tr class="header">
    <th style="width:60%;">Name</th>
    <th style="width:20%;">ID</th>
    <th style="width:20%;">Object Count</th>
  </tr>
  </thead>
  <tbody>
  {{#each records}}
    <tr>
      <td>{{name}}</td>
      <td>{{id}}</td>
      <td>{{objectcount}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>


<script>

var valueEl = document.getElementById("filter-value");

function updateFilter() {
  table.setFilter("name","like", valueEl.value);
}

document.getElementById("filter-value").addEventListener("keyup", updateFilter);

var table = new Tabulator("#endpoint-table", {
  height:"500px",
  layout:"fitColumns",
  backgroundColor:"#F5F5F5",
  columns:[
  {title:"Name", field:"name"},
  {title:"ID", field:"id", sorter:"number"},
  {title:"Object Count", field:"objectcount", sorter:"number"}
  ],
});
</script>
